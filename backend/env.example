# Database Configuration
DATABASE_URL=sqlite:///./turtle_stock.db

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://turtle-stock.web.app

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# External API Configuration
YAHOO_FINANCE_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Firebase Configuration
FIREBASE_PROJECT_ID=turtle-stock
# Optional: Path to Firebase service account JSON file (for production)
# Leave empty to use default credentials or fallback verification
FIREBASE_CREDENTIALS_PATH= 